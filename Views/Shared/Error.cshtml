@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="fas fa-exclamation-triangle"></i> Oups ! Une erreur s'est produite</h3>
                </div>
                <div class="card-body text-center">
                    <div class="error-content">
                        <i class="fas fa-bug fa-4x text-danger mb-4"></i>
                        
                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <h4 class="text-danger mb-4">@ViewBag.Error</h4>
                        }
                        else
                        {
                            <h4 class="text-danger mb-4">Une erreur inattendue s'est produite.</h4>
                            <p class="text-muted">Nous nous excusons pour la gêne occasionnée. Veuillez réessayer plus tard.</p>
                        }
                        
                        @if (Model?.ShowRequestId == true)
                        {
                            <p class="text-muted small">
                                <strong>ID de la requête :</strong> @Model.RequestId
                            </p>
                        }
                    </div>
                </div>
                <div class="card-footer text-center">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Retour à l'accueil
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Page précédente
                        </a>
                        <a href="@Url.Action("Index", "Joke")" class="btn btn-success">
                            <i class="fas fa-laugh"></i> Voir les blagues
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>