@model List<WebPortal.Models.Joke>
@{
    ViewData["Title"] = "Plusieurs Blagues";
    var count = ViewBag.Count;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white text-center">
                    <h3><i class="fas fa-laugh-beam"></i> @count Blagues Aléatoires</h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var joke = Model[i];
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <span class="badge bg-primary me-2">@(i + 1)</span>
                                        <span class="badge bg-secondary">@joke.Type</span>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><strong>@joke.Setup</strong></p>
                                    <p class="card-text text-success"><em>@joke.Punchline</em></p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-triangle"></i>
                            Aucune blague trouvée pour le moment.
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Retour
                    </a>
                    <a href="@Url.Action("Multiple", new { count = count })" class="btn btn-primary">
                        <i class="fas fa-redo"></i> Recharger
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>